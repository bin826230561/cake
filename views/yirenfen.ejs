    /*=============================首页商品加入购物车==========================*/
    console.log($(".addGoods").attr("done"))
    $("body").on("click",".addGoods",function () {
        var clickTime=1;
        if ($(this).attr("done") == undefined) {
            $(this).attr("done", "true");
            var $index =$(this).parent().parent().parent().children(".dangao-li").children(".fangda").children().attr("name");
            var $price =$(this).parent().parent().children(".inner-addBuy-title").text();
            var $bang = $(this).parent().parent().children(".inner-addBuy-chose").children(".quan").text().trim();
            var $allPrice=$price;
            console.log($price)
            $.ajax({
                type: "post",
                url: "/addGoods.do",
                data: {
                    goods_id: $index,//商品ID
                    goods_bang: $bang,//商品规格
                    goods_price: $price,//商品单价
                    goods_num: clickTime,//商品数量
                    goods_count: $allPrice,//商品总价
                },
                success: function (data) {
                    /*这是为了刷新购物车的商品数量(无需刷新)*/
                    $.ajax({
                        url: "/getCount.do",
                        success: function (data) {
                            var goodsCount = data[0].num;
                            if (goodsCount > 0) {
                                $("#header .nav-function li .num").css({
                                    transform: "scale(1)"
                                })
                                $(".buy-cart").children("span").show();
                                $(".buy-cart").children("span").children("span").text(goodsCount);
                            } else {
                                $(".buy-cart").children("span").hide();
                            }
                        }
                    })
                }
            })
        } else{
            clickTime++;
            var $index ="<%=mydata[19].goods_id%>";
            var $price = $(this).parent().parent().children(".inner-addBuy-title").text().split("￥")[1];
            var $allPrice=parseInt($price)*clickTime;
            var $allPrice="￥"+$price*clickTime+".00";
            console.log($index,$price,$allPrice)
            $.ajax({
                type: "post",
                url: "/changeGoodsNum.do",
                data: {
                    goods_id: $index,//商品ID
                    goods_num: clickTime,//商品数量
                    goods_count: $allPrice,//商品总价
                },
                success: function (data) {
                    // cosnole.log(data)
                }
            })
        }
    })
</script>
