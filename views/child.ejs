                success: function (data) {
                    /*这是为了刷新购物车的商品数量(无需刷新)*/
                    $.ajax({
                        url: "/getCount.do",
                        success: function (data) {
                            var goodsCount = data[0].num;
                            if (goodsCount > 0) {
                                $("#header .nav-function li .num").css({
                                    transform: "scale(1)"
                                })
                                $(".buy-cart").children("span").show();
                                $(".buy-cart").children("span").children("span").text(goodsCount);
                            } else {
                                $(".buy-cart").children("span").hide();
                            }
                        }
                    })
                }
            })
        } else {
            clickTime++;
            var $index = $(this).parent().parent().parent().attr("name");
            console.log(111)
            var $price = $(this).parent().parent().parent().children().children("span").text().split("/")[0];
